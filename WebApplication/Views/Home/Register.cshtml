@model WebApplication.Models.RegisterUser
@{
    ViewBag.Title = "Register Page";
}

@if (User.Identity.IsAuthenticated)
{
    <h1>Привет, @User.Identity.Name!</h1>
}
else
{
    @Html.ActionLink("Залогиниться", "Login", "Home")
    <br />

    <h2>Регистрация</h2>

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Name, new { @class = "col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Login, new { @class = "col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Login)
                    @Html.ValidationMessageFor(model => model.Login)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, new { @class = "col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Gender, new { @class = "col-md-1" })
                <div class="col-md-11">
                    @Html.DropDownListFor(model => model.Gender.Name, ViewBag.Genders as SelectList)
                    @Html.ValidationMessageFor(model => model.Gender)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password, new { @class = "col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.ConfirmPassword)
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>

        

            <div class="form-group">
                <div class="col-md-offset-1 col-md-11">
                    <input type="submit" value="Зарегистрироваться" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}